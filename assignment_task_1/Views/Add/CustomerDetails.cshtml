                            <td>@product.Product_Name</td>
                            <td >@product.Product_Detail</td>
                            <td id="totalprice">@product.Product_Price</td>
                            <td>@product.Product_warranty</td>
                           @*  <input type="hidden" name="product_prices[]" value="@product.Product_Price" /> *@
