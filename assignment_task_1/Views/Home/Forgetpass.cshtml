@model Forgetpass
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">

<style>
    .row {
        margin-top: 40px;
    }

    
</style>
<div class="row justify-content-center">
    <div class="col-5 mt-5 border border-4 p-4 rounded">

        @if (Model?.emailsent == true)
        {
            <div class="alert alert-success" role="alert">
                <p>We have send an email on your registered email id</p>
            </div>
        }
        else
        {
            <form method="post" asp-action="Forgetpass">
                <h3 class="text-center text-muted mb-2">Forget Password</h3>

                <div class="mb-2 form-group">
                    <label class="mb-2" asp-for="email"></label><span class="text-danger">  **</span>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
                    <span asp-validation-for="email" class=" text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 d-grid">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>

                    <div class="col-6 d-grid">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-warning ">Back to Login</a>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

