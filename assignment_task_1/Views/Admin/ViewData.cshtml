    <h3 class="heading"><b>Add Products Details</b></h3>

    <div class="card">
        <form asp-controller="Admin" asp-action="ViewData" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="Product_Name">Product_Name:</label>
                <input asp-for="Product_Name" name="Product_Name" class="form-control" placeholder="Enter Product Name" required="true">
            </div>

            <div class="mb-3">
                <label for="cid">CID:</label>
                <input asp-for="cid" name="cid" class="form-control" placeholder="Enter Product Key" required="true">
            </div>
            <div class="mb-3">
                <label for="Product_Name">Product_Detail:</label>
                <input asp-for="Product_Detail" name="Product_Detail" class="form-control" placeholder="Enter Product Detail" required="true">
            </div>
            <div class="mb-3">
                <label for="Product_Name">Product_warranty:</label>
                <input asp-for="Product_warranty" name="Product_warranty" class="form-control" placeholder="Enter Product warranty" required="true">
            </div>

            <div class="mb-3">
                <label for="Product_Price">Product_Price:</label>
                <input asp-for="Product_Price" name="Product_Price" class="form-control" type="number" placeholder="Enter Product Price" required="true">
            </div>

            <div class="mb-3">
                <label for="Product_Image">Product_Image:</label>
                <input asp-for="Product_Image" name="Product_Image" class="form-control" type="file" required="true">
            </div>
           
            <div class=" center">
                <button class="btn btn-success" type="submit">Add Product</button><br />
                <button href="Add/ShowView" class="btn btn-info" type="submit">Show View</button>
                
            </div>
        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
