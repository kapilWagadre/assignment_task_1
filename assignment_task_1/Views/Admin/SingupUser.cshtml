                //     ],
                //     width: "160px"
                // },
            ],
            toolbar: ["search"],
            editable: "popup",
            size: "medium",
            width: 1000,
            columnMenu: {
                messages: {
                    columns: "select columns"

                }
            },

            dataSource: {

                transport: {
                    read: {
                        url: "/Admin/Singupdetail/",
                        dataType: "json"
                    },
                    
                    update: {
                        url: "/Admin/UpdateData/",
                        dataType: "json",
                        type: 'POST'
                    },
                    destroy: {
                        url: "/Admin/DeleteData/",
                        dataType: "json",
                        type: 'POST'

                    }

                },

                schema: {
                    model: {
                        id: "id",
                        fields: {
                            id: { type: "number", editable: false },
                            name: { type: "string" },
                            phone: { type: "string" },
                            email: { type: "string" },
                            city: { type: "string" },
