    <div id="grid"></div>
    <script>
        $("#grid").kendoGrid({
            columns: [
                // { field: "id", title: "id", width: "80px", editable: false },
                { field: "username", title: "Name", width: "140px" },
                { field: "contact", title: "Phone", width: "130px" },
